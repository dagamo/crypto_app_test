{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@hooks/*": ["src/hooks/*"], // Ajustado para apuntar correctamente
      "@services/*": ["src/services/*"] // Ajustado para apuntar correctamente
    },
    "target": "esnext",
    "module": "Node16",
    "jsx": "react-native",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["jest"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
